.screen-fader {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 255);
    transition-property: opacity;
    transition-duration: 1s;
}

.hidden {
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
    transition-property: opacity;
    transition-duration: 1s;
    opacity: 0;
}
